<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool">
 <action-provider name="portal_actions" >

  <action title="Export" action_id="smartprintng-export"
     category="document_actions"
     condition_expr=""
     url_expr="string:javascript:smartPrintSelection('${object/absolute_url}', 'sp_selection')"
    visible="True">
   <permission>View</permission>
  </action>
  <action title="PDF" action_id="smartprintng-export-pdf"
     category="document_actions"
     url_expr="string:${object/absolute_url}/smartPrintConvert?format=pdf2&amp;redirect:int=1&amp;options.template:record=StandardTemplate&amp;options.stylesheet:record=StandardStylesheet"
     condition_expr=""
    visible="False">
   <permission>View</permission>
  </action>
 </action-provider>
</object>
